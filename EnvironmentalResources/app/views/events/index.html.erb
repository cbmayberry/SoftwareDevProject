<p id="notice"><%= notice %></p>

<div class="container">
  <div class="table-wrapper">
    <div class="table-title">
      <div class="row">
        <div class="col-sm-8"><h2>Events</h2></div>
        <div class="col-sm-4">
          <%= link_to 'New Event', new_event_path, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Name</th>
          <th>Organization</th>
          <th>Description</th>
          <th>Date</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @events.each do |event| %>
          <tr>
            <td><%= event.event_name %></td>
            <td><%= event.org.name %></td>
            <td><%= event.event_description %></td>
            <td><%= event.date.strftime("%b %d, %Y") %></td>
            <td>
              <%= link_to 'Edit', edit_event_path(event), class: "btn btn-warning" %>
              <%= button_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
              </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>