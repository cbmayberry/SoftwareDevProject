<p id="notice"><%= notice %></p>

<div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-3"></div>
    <div class="col-sm-3"></div>
    <% if logged_in? %>
      <div class="col-sm-3"><%= link_to 'New Organization', new_org_path, class: "btn btn-primary" %></div>
    <% end %>
</div>

  <div class="container">
    <div class="table-title"> <h1>Community Organizations</h1> </div>
    <div class="table-search">
      <%= form_tag(orgs_path, method: :get) do %>
      <p> Search for an organization </p>
      <%= text_field_tag(:search, params[:search]) %>
      <%= submit_tag ("Search") %>
      <% end %>  
    </div>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th><%= link_to "Name", :sort => "name"%></th>
          <th>Location</th>
          <th>Description</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @orgs.each do |org| %>
          <tr>
            <td><%= link_to org.name, org.website, target: '_blank' %></td>
            <td><%= org.location %></td>
            <td><%= org.description %></td>
            <td><div style="width:100%; height: 100%">
                <%= link_to 'Info', org, method: :show, class: "btn btn-outline-secondary" %>
                <%= link_to 'Edit', edit_org_path(org), class: "btn btn-outline-secondary" %>
                </div></td>


          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
