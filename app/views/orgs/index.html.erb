<p id="notice"><%= notice %></p>

<div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-3"></div>
    <div class="col-sm-3"></div>
    <div class="col-sm-3"><%= link_to 'New Organization', new_org_path, class: "btn btn-info" %></div>
</div>

  <div class="container">
    <div class="table-title"> <h1>Community Organizations</h1> </div>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Name</th>
          <th>Location</th>
          <th>Description</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @orgs.each do |org| %>
          <tr>
            <td><%=link_to org.name, org, method: :show%></td>
            <td><%= org.location %></td>
            <td><%= org.description %></td>
            <td>
              <button type="button" class="btn btn-outline-secondary">
                <i class="material-icons-outlined">open_in_new</i>
                <%= link_to '', org.website, target: '_blank', :method => :get %>
              </button>
              <% if logged_in? %>
                <button type="button" class="btn btn-outline-secondary">
                  <i class="material-icons-outlined">edit</i>
                  <%= link_to '', edit_org_path(org) %>
                </button>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>