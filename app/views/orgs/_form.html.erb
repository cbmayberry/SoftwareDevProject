<%= form_with(model: org, local: true) do |form| %>
<form>
  <div class="container">
    <div class="field">
      <%= form.label :name, "Name", class: "visually-hidden" %>
      <%= form.text_field :name, class: "form-control", placeholder: "Your organization name"%>
    </div>
    <div class="field">
      <%= form.label :location, "Location", class: "visually-hidden" %>
      <%= form.text_field :location, class: "form-control", placeholder: "Your organization address" %>
    </div>
    <div class="field">
      <%= form.label :description, "Description", class: "visually-hidden" %>
      <%= form.text_field :description, class: "form-control", placeholder: "Your organization description" %>
    </div>
    <div class="field">
      <%= form.label :website, "Website", class: "visually-hidden" %>
      <%= form.url_field :website, class: "form-control", placeholder: "Your organization website link" %>
    </div>
    <div class="actions">
      <%= form.submit "Submit", class: "btn btn-primary" %>
    </div>
  </div>

  <% if org.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(org.errors.count, "error") %> prohibited this organization from being saved:</h2>

      <ul>
        <% org.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<% end %>
</form>
