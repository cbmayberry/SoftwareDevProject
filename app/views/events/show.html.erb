<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col text-center">
    <%= link_to 'Edit', edit_event_path(@event), class: "btn btn-outline-secondary btn-sm" %>
  </div>
</div>

<div class="card text-center">
    <div class="card-body">
    <h3 class="card-title">
      <%= @event.event_name %>
      <small class="text-muted"> <%= link_to @event.org.name, org, method: :show%> </small>
    </h3>
      <p class="card-text"> <%= @event.date %> </p>
      <p class="card-text"> <u>Description:</u> <%= @event.event_description %> </p>
    </div>
</div>

<div class="row">
    <div class="col text-center">
        <%= link_to 'Back', events_path, class: "btn btn-secondary" %>
    </div>
</div>
 
