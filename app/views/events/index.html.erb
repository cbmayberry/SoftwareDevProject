<p id="notice"><%= notice %></p>

<div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-3"></div>
    <div class="col-sm-3"></div>
    <div class="col-sm-3"><%= link_to 'New Event', new_event_path, class: "btn btn-info" %></div>
</div>

<div class="container">
    <div class="table-title"> <h1>Events</h1> </div>
    <div class="table-search">
      <%= form_tag(events_path, method: :get) do %>
      <p> Search for an event </p>
      <%= text_field_tag(:search, params[:search]) %>
      <%= submit_tag ("Search") %>
      <% end %>
    </div>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th><%= link_to "Name", :sort => "event_name"%></th>
          <th>Organization</th>
          <th>Description</th>
          <th><%= link_to "Date", :sort => "date"%></th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @events.each do |event| %>
          <tr>
            <td><%= event.event_name %></td>
            <td><%= link_to event.org.name, event.org.website, target: '_blank' %></td>
            <td><%= event.event_description %></td>
            <td><%= event.date.strftime("%b %d, %Y") %></td>
            <td><div style="width:100%; height: 100%">
              <%= link_to 'Info', event, method: :show, class: "btn btn-outline-secondary" %>
              <%= link_to 'Edit', edit_event_path(event), class: "btn btn-outline-secondary" %>
            </div></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
